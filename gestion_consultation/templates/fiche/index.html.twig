{% extends 'baseFront.html.twig' %}

{% block title %}Fiche index{% endblock %}

{% block body %}
    {% block schedule %}
     <!-- SCHEDULE -->
     <section class="schedule section"  id="schedule">
     <h1 style="text-align:center;color:white; margin-bottom:60px;">Fiche List</h1>
     <a style="margin-left:1300px; font-size:20px;border-radius:20px; padding:5px; color:black; background-color:#FAC031;" href="{{ path('app_fiche_new') }}"><svg xmlns="http://www.w3.org/2000/svg" width="18" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
</svg> Create new</a>
     {% for fiche in fiches %}
<div class="business2" style="display: flex; flex-wrap: wrap;  align-items: center;  min-height: fit-content;  justify-content: center;  background-color: #131417;">

        <div class="front" style=" background-color: #393939;  padding: 10px; width: 300px;  height: 400px;  margin: 20px;  border-radius: 25px;  overflow: hidden;position: relative;">
            <div class="red" style=" height: 25%; border-radius:25px 25px 0px 0px; background-color: #FAC031;">
            <a href="{{ path('app_fiche_show', {'id': fiche.id}) }}">
            <svg style=" margin-left:250px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16"> <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/> 
            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/> </svg>
            </a>
             <a href="{{ path('app_fiche_edit', {'id': fiche.id}) }}">
            <svg style=" margin-left:220px; margin-top:-45px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen-fill" viewBox="0 0 16 16"> 
            <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001z"/> </svg>
            </a>
            </div>
            <div class="avatar" style="position: absolute;width: 25%;left: 50%;top: 60px;transform: translate(-50%);text-align: center;">
                <div class="img" style="background-color: transparent; padding: 10px;box-sizing: border-box;  height: 10%;  display: flex;  align-items: center;justify-content: center;">

                    <img style=" width: 80px;border: 6px solid var(--dark);border-radius: 50%;" 
                    src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcS6gQx4YKb_xAuiXBJABiBdaj2nzmKt468GGqsAaug30vEAva-Y2DfrV9iJ-3JlHx-QC9k&usqp=CAU"  alt="">
                </div>
                <p style="margin: 0; text-transform: uppercase;font-weight: 900;color: #eee; ">{{ fiche.nomFiche }}</p>
                <p style=" margin: 0;color: #eee;">{{ fiche.category }}</p>
            </div>
            <div class="infos" style="position: absolute;bottom: 20%;left: 5%;">
                <div>
                <svg  style="width: 30px;height: 30px; margin-right: 10px;  background-color:#FAC031;  padding: 8px;  border-radius: 7px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar2-check-fill" viewBox="0 0 16 16"> 
                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zm9.954 3H2.545c-.3 0-.545.224-.545.5v1c0 .276.244.5.545.5h10.91c.3 0 .545-.224.545-.5v-1c0-.276-.244-.5-.546-.5zm-2.6 5.854a.5.5 0 0 0-.708-.708L7.5 10.793 6.354 9.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/> </svg>
                </div>
                <div >
                        <p style="font-size: 0.8rem; margin-left: 45px ; margin-right: 15px ;margin-top:-30px; font-weight: 500; color: #eee;">
                        {{ fiche.consultation }}</p>
                    </div>
                <div>
                <svg style="width: 30px;  height: 30px;  margin-right: 10px;  background-color: #FAC031;  padding: 8px;  border-radius: 7px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-right-text-fill" viewBox="0 0 16 16">
                 <path d="M16 2a2 2 0 0 0-2-2H2a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h9.586a1 1 0 0 1 .707.293l2.853 2.853a.5.5 0 0 0 .854-.353V2zM3.5 3h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1 0-1zm0 2.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1 0-1zm0 2.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1z"/> </svg>
                <div>
                        <p style="font-size: 0.8rem; margin-left: 45px ; margin-right: 15px ;margin-top:-30px; font-weight: 500;color: #eee;">
                        {{ fiche.descriptionFiche }}</p>
                </div>
            </div>
        </div>
    </div>
    {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
      {% endfor %}
     </section>
{% endblock %}
{% endblock %}
